<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="srio_rest_upload.upload_manager.class">SRIO\RestUploadBundle\Upload\UploadManager</parameter>

        <parameter key="srio_rest_upload.processor.simple.class">SRIO\RestUploadBundle\Upload\Processor\SimpleUploadProcessor</parameter>
        <parameter key="srio_rest_upload.processor.multipart.class">SRIO\RestUploadBundle\Upload\Processor\MultipartUploadProcessor</parameter>
        <parameter key="srio_rest_upload.processor.resumable.class">SRIO\RestUploadBundle\Upload\Processor\ResumableUploadProcessor</parameter>
        <parameter key="srio_rest_upload.processor.form_data.class">SRIO\RestUploadBundle\Upload\Processor\FormDataUploadProcessor</parameter>
    </parameters>

    <services>
        <service id="srio_rest_upload.upload_manager" class="%srio_rest_upload.upload_manager.class%">
            <argument>%srio_rest_upload.configuration%</argument>
        </service>

        <service id="srio_rest_upload.processor.simple" class="%srio_rest_upload.processor.simple.class%">
            <tag name="rest_upload.processor" uploadType="simple" />
        </service>
        <service id="srio_rest_upload.processor.multipart" class="%srio_rest_upload.processor.multipart.class%">
            <tag name="rest_upload.processor" uploadType="multipart" />
        </service>
        <service id="srio_rest_upload.processor.form_data" class="%srio_rest_upload.processor.form_data.class%">
            <tag name="rest_upload.processor" uploadType="formData" />
        </service>
        <service id="srio_rest_upload.processor.resumable" class="%srio_rest_upload.processor.resumable.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <tag name="rest_upload.processor" uploadType="resumable" />
        </service>
    </services>
</container>
